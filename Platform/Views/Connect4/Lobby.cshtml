@{
    ViewData["Title"] = "Puissance 4 - Lobby";
    var lobbyId = (string)(ViewBag.LobbyId ?? "");
    var pseudo = (string)(ViewBag.Pseudo ?? "");
}

<link rel="stylesheet" href="~/css/connect4.css" />

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Puissance 4</h2>

        <div class="text-end">
            <div class="small text-muted">Lien lobby</div>
            <div class="d-flex gap-2">
                <input id="shareLink" class="form-control form-control-sm" style="width:360px"
                       value="@($"{Context.Request.Scheme}://{Context.Request.Host}/Connect4/Lobby/{lobbyId}")"
                       readonly />
                <button id="copyLinkBtn" class="btn btn-sm btn-outline-secondary">Copier</button>
            </div>
        </div>
    </div>

    <div class="mb-2">
        <span class="badge bg-secondary">Lobby</span>
        <code id="lobbyId">@lobbyId</code>
    </div>

    <div class="row g-3">
        <!-- Col gauche : joueurs + actions + chat -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-2">Joueurs</h5>
                        <button id="startBtn" class="btn btn-sm btn-success d-none">Démarrer</button>
                    </div>

                    <ul id="playersList" class="list-group mb-3"></ul>

                    <div id="status" class="alert alert-info py-2 mb-0">Connexion…</div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="mb-2">Chat</h5>

                    <div id="chatBox" style="height:260px; overflow:auto; background:#0b1220; border-radius:10px; padding:10px;">
                        <div class="text-muted small">Aucun message pour l’instant.</div>
                    </div>

                    <div class="input-group mt-2">
                        <input id="chatInput" class="form-control" placeholder="Écrire un message…" maxlength="200" />
                        <button id="chatSendBtn" class="btn btn-primary">Envoyer</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Col droite : jeu -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="small text-muted mb-2">
                        Clique une colonne pour jouer (quand la partie est démarrée).
                    </div>

                    <div id="board" class="c4-board" aria-label="Grille puissance 4"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SignalR : tu peux garder le CDN pour éviter les soucis libman -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>

<script>
  window.C4_LOBBY_ID = "@lobbyId";
  window.C4_PSEUDO = "@pseudo";
</script>

<script src="~/js/connect4-lobby.js"></script>
