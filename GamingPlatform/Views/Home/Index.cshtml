@model IEnumerable<GamingPlatform.Models.Game>

@{
    ViewData["Title"] = "Accueil - GamingPlatform";
}

<div id="mainCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mainCarousel" data-slide-to="1"></li>
        <li data-target="#mainCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/slider/slider1.png" class="d-block w-100 carousel-img" alt="Jeux en ligne">
            <div class="carousel-caption d-none d-md-block">
                <h2>Bienvenue sur GamingPlatform</h2>
                <p>Votre nouvelle plateforme de jeux en ligne sans inscription</p>
                <a href="#games" class="btn btn-primary btn-lg">Découvrir nos jeux</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider/slider2.png" class="d-block w-100 carousel-img" alt="Multijoueur">
            <div class="carousel-caption d-none d-md-block">
                <h2>Jouez avec vos amis</h2>
                <p>Créez ou rejoignez un lobby pour commencer à jouer</p>
                <a href="@Url.Action("Index", "Lobby")" class="btn btn-primary btn-lg">Voir les lobbys</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/slider/slider3.png" class="d-block w-100 carousel-img" alt="Compétition">
            <div class="carousel-caption d-none d-md-block">
                <h2>Compétition et classements</h2>
                <p>Consultez les meilleurs scores et relevez des défis</p>
                <a href="#" class="btn btn-primary btn-lg">Voir les classements</a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
    </a>
    <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
    </a>
</div>

<div class="container mt-5 d-flex justify-content-center align-items-center" style="width: 20vw;">
    <!-- Bouton pour ouvrir le modal d'enregistrement -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registerOrLoginModal">
        S'enregistrer
    </button>
</div>


<section id="games" class="container my-2">
    <h2 class="text-center mb-4">Nos Jeux</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var game in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card game-card h-100">
                        <img src="@game.ImageUrl" class="card-img-top img-fluid" style="height: 150px; object-fit: cover;"
                            alt="@game.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Name</h5>
                            <p class="card-text flex-grow-1">
                                @(game.Description.Length > 80 ? game.Description.Substring(0, 80) + "..." : game.Description)
                            </p>
                            <a href="/game/details/@game.Id" class="btn btn-primary mt-auto">Jouer</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Aucun jeu disponible pour le moment.</p>
        }
    </div>
</section>



<section class="container my-5">
    <h2 class="text-center mb-4">Fonctionnalités</h2>
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card feature-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users mr-2"></i>Lobbys publics et privés</h5>
                    <p class="card-text">Créez ou rejoignez des lobbys pour jouer avec vos amis. Option de lobbys privés
                        avec mot de passe.</p>
                    <a href="@Url.Action("Index", "Lobby")" class="btn btn-outline-primary">Voir les lobbys</a>
                    <button class="btn btn-success btn-lg" data-toggle="modal"
                        data-target="#createLobbyGlobalModal">Créer un lobby</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card feature-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-trophy mr-2"></i>Classements</h5>
                    <p class="card-text">Consultez les meilleurs scores pour chaque jeu et relevez des défis.</p>
                    <a href="@Url.Action("Index", "Leaderboard")" class="btn btn-outline-primary">Voir les
                        classements</a>
                </div>
            </div>
        </div>
    </div>

</section>


<!-- Modal pour créer un lobby avec le choix des jeux -->
<div class="modal fade" id="createLobbyGlobalModal" tabindex="-1" role="dialog" aria-labelledby="createLobbyModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createLobbyModalLabel">Créer un Nouveau Lobby</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createLobbyForm" asp-controller="Lobby" asp-action="CreateWithSelect" method="post">
                    <div class="form-group">
                        <label for="lobbyName">Nom du lobby</label>
                        <input type="text" class="form-control" id="lobbyName" name="Name" placeholder="Nom du lobby"
                            required>
                    </div>

                    <div class="form-group">
                        <label for="game">Choisir un jeu</label>
                        <select name="GameId" class="form-control" id="game" required>
                            <option value="" disabled selected>Sélectionnez un jeu</option>
                            @foreach (var game in Model)
                            {
                                <option value="@game.Id">@game.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="privateLobby" name="IsPrivate" value="true">
                        <label class="form-check-label" for="privateLobby">Créer un lobby privé</label>
                    </div>

                    <div id="passwordField" class="form-group d-none mt-3">
                        <label for="lobbyPassword">Mot de passe</label>
                        <input type="password" class="form-control" id="lobbyPassword" name="Password"
                            placeholder="Mot de passe">
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Créer</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal d'enregistrement ou de connexion -->
<div class="modal fade" id="registerOrLoginModal" tabindex="-1" role="dialog"
    aria-labelledby="registerOrLoginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerOrLoginModalLabel">S'enregistrer ou Se Connecter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulaire de connexion ou d'enregistrement -->
                <ul class="nav nav-tabs" id="registerLoginTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="register-tab" data-toggle="tab" href="#register" role="tab"
                            aria-controls="register" aria-selected="true">S'enregistrer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="login-tab" data-toggle="tab" href="#login" role="tab"
                            aria-controls="login" aria-selected="false">Se connecter</a>
                    </li>
                </ul>

                <div class="tab-content mt-3" id="registerLoginTabContent">
                    <!-- Formulaire d'enregistrement -->
                    <div class="tab-pane fade show active" id="register" role="tabpanel" aria-labelledby="register-tab">
                        <form asp-action="RegisterPlayer" method="post">
                            <div class="form-group">
                                <label for="registerPseudo">Pseudo</label>
                                <input type="text" class="form-control" id="registerPseudo" name="pseudo" required />
                            </div>
                            <div class="form-group">
                                <label for="registerName">Nom (Optionnel)</label>
                                <input type="text" class="form-control" id="registerName" name="name" />
                            </div>
                            <div class="form-group">
                                <label for="registerEmail">Email (Optionnel)</label>
                                <input type="email" class="form-control" id="registerEmail" name="email" />
                            </div>
                            <button type="submit" class="btn btn-primary">S'enregistrer</button>
                        </form>
                    </div>

                    <!-- Formulaire de connexion -->
                    <div class="tab-pane fade" id="login" role="tabpanel" aria-labelledby="login-tab">
                        <form asp-action="LoginPlayer" method="post">
                            <div class="form-group">
                                <label for="loginPseudo">Pseudo</label>
                                <input type="text" class="form-control" id="loginPseudo" name="pseudo" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // S'assurer que le modal est bien réinitialisé à chaque fois qu'il est fermé
        $('#registerOrLoginModal').on('hidden.bs.modal', function () {
            $(this).find('form')[0].reset();
        });
    </script>
}