@model Player

@{
    ViewData["Title"] = "Connexion";
}

<section class="hero-modern">
    <h1 class="hero-title">Choisir un pseudo</h1>
    <p class="hero-subtitle">
        Entre ton pseudo pour jouer en ligne. Email et nom sont facultatifs.
    </p>
</section>

<section class="login-section">
    <div class="login-card">
        <form asp-action="Login" method="post" novalidate>
            <div class="form-group">
                <label asp-for="Pseudo" class="form-label"></label>
                <input asp-for="Pseudo" class="form-input" />
                <span asp-validation-for="Pseudo" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-input" />
                <span asp-validation-for="Nom" class="form-error"></span>
            </div>

            <button type="submit" class="btn-primary login-submit">
                Commencer Ã  jouer
            </button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
